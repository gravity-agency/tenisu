{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "./*": [
        "src/*",
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./bin/www.ts",
    "./test/**/*.ts"
  ],
}
